<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="iscopy">
                <settings>
                    <type>iscopy</type>
                    <label translate="true">Copy products</label>
                    <actions>
                        <action name="0">
                            <type>used</type>
                            <label translate="true">Used</label>
                            <url path="copyproduct/index/massCopy">
                                <param name="iscopy">used</param>
                            </url>
                        </action>
                        <action name="1">
                            <type>refurbished</type>
                            <label translate="true">Refurbished</label>
                            <url path="copyproduct/index/massCopy">
                                <param name="iscopy">refurbished</param>
                            </url>
                        </action>
                    </actions>
                </settings>
           </action>

        </massaction>
    </listingToolbar>
</listing>